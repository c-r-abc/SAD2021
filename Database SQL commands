
CREATE TABLE "Badges" (
	"badge_ID"	INTEGER UNIQUE,
	"badge"	TEXT,
	PRIMARY KEY("badge_ID")
);

CREATE TABLE "Score" (
	"score_ID"	INTEGER NOT NULL UNIQUE,
	"score"	TEXT NOT NULL,
	PRIMARY KEY("score_ID" AUTOINCREMENT)
);

CREATE  "Tests" (
	"test_ID"	INTEGER NOT NULL UNIQUE,
	"topic_ID"	INTEGER,
	"teacher_ID"	INTEGER,
	"Date"	DATE,
	"type_ID"	INTEGER NOT NULL,
	PRIMARY KEY("test_ID")
);

CREATE TABLE IF NOT EXISTS "TestType" (
	"type_ID"	INTEGER NOT NULL UNIQUE,
	"type"	TEXT,
	PRIMARY KEY("type_ID")
);
CREATE TABLE "Topics" (
	"topic_ID"	INTEGER NOT NULL UNIQUE,
	"test_ID"	INTEGER,
	"counter"	INTEGER,
	PRIMARY KEY("topic_ID")
);

CREATE TABLE "Parts" (
	"part_ID"	INTEGER NOT NULL UNIQUE,
	"topic_ID"	INTEGER,
	"counter"	INTEGER,
	PRIMARY KEY("part_ID")
);

CREATE TABLE  "Attendance" (
	"Attendance_ID"	INTEGER NOT NULL UNIQUE,
	"Type"	TEXT NOT NULL,
	PRIMARY KEY("Attendance_ID")
);

CREATE TABLE  "Progress" (
	"progress_ID"	INTEGER NOT NULL UNIQUE,
	"progress"	TEXT,
	PRIMARY KEY("progress_ID")
);

CREATE TABLE  "Teacher" (
	"teacher_ID"	INTEGER NOT NULL UNIQUE,
	"first_name"	TEXT NOT NULL,
	"last_name"	TEXT NOT NULL,
	"group_ID"	INTEGER,
	"test_ID"	INTEGER,
	PRIMARY KEY("teacher_ID")
);

CREATE TABLE "Students" (
	"student_ID"	INTEGER NOT NULL UNIQUE,
	"first_name"	TEXT NOT NULL,
	"last_name"	TEXT NOT NULL,
	"DOB"	TEXT,
	"class"	TEXT,
	PRIMARY KEY("student_ID" AUTOINCREMENT)
);

CREATE TABLE  "Class" (
	"class_ID"	INTEGER NOT NULL UNIQUE,
	"class_name"	INTEGER,
	PRIMARY KEY("class_ID" AUTOINCREMENT)
);

CREATE TABLE "Workbook" (
	"student_ID"	INTEGER,
	"dates"	TEXT,
	"test_ID"	INTEGER,
	"progress_ID"	INTEGER,
	"badge_ID"	INTEGER,
	"Grade"	INTEGER
);

CREATE TABLE "Rollbook" (
	"Date"	TEXT,
	"group_ID"	INTEGER,
	"student_ID"	INTEGER,
	"Attendence_ID"	INTEGER,
	FOREIGN KEY("student_ID") REFERENCES "Students"
);

